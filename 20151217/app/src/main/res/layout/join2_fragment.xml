<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#111111">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contents1"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/BtnX"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toplogo_24dp"
            android:layout_marginTop="50dp"
            android:id="@+id/logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_font_join_24dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp"
            android:id="@+id/font_logo"
            android:paddingBottom="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태어난 해"
            android:id="@+id/text1"
            android:paddingLeft="30dp"
            android:textColor="#FFFFCC"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/year"/>


      <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/text1"
            android:layout_below="@+id/font_logo"
            android:prompt="@string/chooseSelect"
            android:layout_marginRight="30dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사는곳"
            android:id="@+id/text2"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            android:textColor="#FFFFCC"
            android:layout_alignBottom="@+id/live"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/live"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/text2"
            android:layout_below="@+id/year"
            android:layout_alignLeft="@+id/year"
            android:textColor="#FFFFFF"
            android:prompt="@string/chooseSelect"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:id="@+id/text3"
            android:textSize="15sp"
            android:textColor="#FFFFCC"
            android:paddingLeft="30dp"
            android:layout_alignBottom="@+id/gender"
            android:gravity="center"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_toRightOf="@+id/text3"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/year"
            android:gravity="center"
            android:layout_below="@+id/live"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:checked="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결혼"
            android:paddingLeft="30dp"
            android:id="@+id/text4"
            android:textSize="15sp"
            android:textColor="#FFFFCC"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/marry"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/marry"
            android:layout_below="@+id/gender"
            android:layout_alignLeft="@+id/year"
            android:layout_toRightOf="@+id/text4"
            android:layout_marginRight="30dp"
            android:gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미혼"
                android:checked="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기혼"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천인"
            android:id="@+id/text5"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#FFFFCC"
            android:paddingLeft="30dp"
            android:layout_alignBaseline="@+id/recommandId"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommandId"
            android:layout_alignLeft="@+id/year"
            android:layout_toRightOf="@+id/text5"
            android:layout_below="@+id/marry"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="확인 버튼을 누르시면 이용약관 및 개인정보취급방침을 읽고 이에 동의하시는 것으로 간주 됩니다."
        android:textColor="#FFFFFF"
        android:id="@+id/font_desc"
        android:layout_below="@+id/recommandId"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:id="@+id/joinBtn1"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/font_desc"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text="회원가입"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:paddingRight="45dp"
            android:layout_below="@+id/font_desc"
            android:paddingLeft="45dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
</RelativeLayout>