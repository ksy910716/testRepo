<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contents1"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태어난 해"
            android:id="@+id/text1"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/year"/>


      <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:textSize="20pt"
            android:layout_toRightOf="@+id/text1"
          android:prompt="@string/chooseSelect"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사는곳"
            android:id="@+id/text2"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/live"
            android:layout_alignRight="@+id/text1"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/live"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/text2"
            android:layout_below="@+id/year"
            android:prompt="@string/chooseSelect"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:id="@+id/text3"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/gender"
            android:gravity="center"
            android:layout_alignRight="@+id/text1"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_toRightOf="@+id/text3"
            android:orientation="horizontal"
            android:layout_below="@+id/live">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:textSize="20dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textSize="20dp"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결혼"
            android:id="@+id/text4"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/marry"
            android:layout_alignRight="@+id/text1"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/marry"
            android:layout_below="@+id/gender"
            android:layout_toRightOf="@+id/text4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미혼"
                android:textSize="20dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기혼"
                android:textSize="20dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천인"
            android:id="@+id/text5"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/recommandId"
            android:layout_alignRight="@+id/text1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommandId"
            android:layout_toRightOf="@+id/text5"
            android:layout_below="@+id/marry"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:textSize="30dp"
            android:onClick="memJoin"
            android:id="@+id/PREV"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="회원가입"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>