<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logos"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/BtnX"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toplogo_24dp"
            android:id="@+id/logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_font_join_24dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp"
            android:id="@+id/font_logo"
            android:paddingBottom="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="이메일 입력"
            android:textColor="#FFFFFF"
            android:layout_alignRight="@id/text2"
            android:layout_alignBaseline="@+id/test1"
            android:layout_below="@+id/font_logo"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/test1"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/text1"
            android:backgroundTint="@color/accent"
            android:layout_below="@+id/font_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="비밀번호 입력"
            android:textColor="#FFFFFF"
            android:layout_alignRight="@id/text2"
            android:layout_alignBaseline="@+id/email"
            android:layout_below="@+id/test1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text1"
            android:backgroundTint="@color/accent"
            android:layout_below="@+id/test1"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:id="@+id/text2"
            android:text="비밀번호 확인"
            android:layout_alignBaseline="@+id/pwd"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwd"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text2"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:id="@+id/text3"
            android:text="닉네임 입력"
            android:layout_alignBaseline="@+id/pwd1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text2"
            android:textColor="#FFFFFF"
            android:id="@+id/pwd1"
            />



        <LinearLayout
            android:id="@+id/button_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/margin_small">

            <Button
            android:id="@+id/PREV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
                android:layout_marginRight="10dp"
            android:background="@drawable/test_round_btn"
            android:text="이전"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/joinBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:background="@drawable/test_round_btn"
                android:text="계속"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>