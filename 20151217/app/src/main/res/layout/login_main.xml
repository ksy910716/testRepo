<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logos"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toplogo_24dp"
            android:layout_marginTop="50dp"
            android:id="@+id/logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_24dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp"
            android:id="@+id/font_logo"
            android:paddingBottom="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="이메일"
            android:textColor="#FFFFFF"
            android:layout_alignRight="@id/text2"
            android:layout_alignBaseline="@+id/email"
            android:paddingLeft="30dp"
            android:layout_below="@+id/font_logo"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/text1"
            android:backgroundTint="@color/accent"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/font_logo"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:id="@+id/text2"
            android:text="비밀번호"
            android:paddingLeft="30dp"
            android:layout_alignBaseline="@+id/pwd"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwd"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text2"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/BtnLogin"
            android:layout_below="@+id/pwd"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="비밀번호 찾기"
            android:textColor="#FFFFFF"
            android:id="@+id/findPwd"
            android:layout_below="@+id/BtnLogin"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facebook"
            android:text="F"
            android:onClick="memJoin"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/findPwd"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Kakao"
            android:text="K"
            android:onClick="memJoin"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/facebook"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/findPwd"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinBtn"
            android:text="JOIN"
            android:textSize="15sp"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="65dp"
            android:layout_below="@+id/findPwd"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/Kakao"
            />

    </RelativeLayout>
</RelativeLayout>